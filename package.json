{
  "name": "stormforge",
  "version": "1.0.0",
  "description": "Production-ready Fastify + TypeScript + Prisma + PostgreSQL REST API framework",
  "main": "index.js",
  "type": "module",
  "keywords": [
    "fastify",
    "typescript",
    "prisma",
    "postgresql",
    "nodejs",
    "api",
    "rest",
    "scalable"
  ],
  "author": "Mohammed Mahmoud <mo.mahmoudde@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@fastify/compress": "^8.3.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sensible": "^6.0.4",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@prisma/client": "^6.8.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "pino-pretty": "^13.1.3",
    "prisma": "^6.8.0"
  },
  "devDependencies": {
    "@fastify/merge-json-schemas": "^0.2.1",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitest/coverage-v8": "4.0.15",
    "@vitest/ui": "4.0.15",
    "eslint": "^9.39.1",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "3.7.4",
    "ts-node": "^10.9.2",
    "tsx": "4.21.0",
    "typescript": "^5.9.3",
    "vitest": "4.0.15"
  },
  "repository": "https://github.com/MohammadMahmoud/stormforge",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && prisma generate",
    "start": "NODE_ENV=production node dist/server.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "lint": "eslint src --ext .ts --fix",
    "lint:check": "eslint src --ext .ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docker:dev": "docker compose up --build",
    "docker:prod": "docker compose up --build -d",
    "check": "npm run lint && npm run format && npm run test:run",
    "ci:build": "npm run check && npm run build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "prepare": "husky"
  }
}
